<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <input id="messageInput" onkeyup="typing()" type="text" placeholder="Saisissez votre message">
    <button onclick="sendMessage()">Envoyer</button>
    <div id="chatMessages"></div>

    <script>
        const socket = io.connect("ws://localhost:3000");
        const user = prompt("Veuillez entrer votre nom d'utilisateur");

        socket.emit("msg", user + " est connectÃ©");

        socket.on("msg", (data) => {
            console.log(data + " du serveur");
            const messageElement = document.createElement("p");
            messageElement.innerText = data;
            document.getElementById("chatMessages").appendChild(messageElement);
        });

        function sendMessage() {
            const message = document.getElementById("messageInput").value;
            socket.emit("msg", user + ": " + message);
        }
        function typing(){
            socket.emit("msg", user + "is typing..");
        }
    </script>
</body>
</html>